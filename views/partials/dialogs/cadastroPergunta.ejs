<div class="container-FazerPergunta">
    <dialog id="pergunta-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Fazer uma pergunta</h3>
                <button class="close-buttons" id="closeModalButton">X</button>
            </div>
            <form class="form-FazerPergunta" id="formPergunta" onsubmit="postPergunta(event)">
                <div class="box">
                    <div class="form-infor">
                        <input id="titulo" class="campo-titulo obrigatorio" type="text" placeholder="Título"
                            name="pergunta" required>
                    </div>
                    <div class="form-infor">
                        <textarea id="descricao" class="campo-descricao" name="descricao"
                            placeholder="Descrição(opcional)"></textarea>
                    </div>
                </div>
                <select id="categoria" name="categoria">
                    <option value="tcc">TCC</option>
                    <option value="ru">RU</option>
                    <option value="bolsas">Bolsas</option>
                </select>
                <div class="buttons-finais">
                    <button type="submit" class="button-publicar">Publicar pergunta</button>
                    <button type="button" class="close-buttons button-cancelar">Cancelar</button>
                </div>
            </form>

        </div>
    </dialog>
</div>